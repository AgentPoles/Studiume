<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splash_Activity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/av_loader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:adjustViewBounds="true"
        app:lottie_repeatCount="0"
        android:cropToPadding="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_fileName="rubberhose_to_ios.json"
        app:lottie_loop="true"/>

    <com.tomer.fadingtextview.FadingTextView
        android:id="@+id/fadingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/av_loader"
        android:textColor="@color/colorPrimarye"
        android:textSize="25sp"
        android:textStyle="bold"
        app:texts="@array/text"
        app:timeout="4500"/>

</RelativeLayout>